---
import Layout from '@/layouts/Layout.astro';
import { createUser } from '@/services/user_service';
import {
  CreateUserFormSchema,
  type CreateUserForm,
  type CreateUserFormError,
} from '@/types/user_types';
import { z } from 'zod';

let error: CreateUserFormError | undefined;
let form: Partial<CreateUserForm> | undefined;

if (Astro.request.method === 'POST') {
  const body = await Astro.request.formData().then((data) => {
    const obj: Record<string, string> = {};
    data.forEach((value, key) => {
      obj[key] = value.toString();
    });

    return obj;
  });
  console.log(body);

  const parsed = await CreateUserFormSchema.safeParse(body);

  if (parsed.success) {
    const result = await createUser(parsed.data);
    if (result.success) {
      return Astro.redirect('/login');
    }
    const zodError = new z.ZodError([]);

    result.errors.forEach((e: any) => {
      const field = e.field;
      const message = e.defaultMessage;
      zodError.addIssue({
        code: z.ZodIssueCode.custom,
        path: [field],
        message,
      });
    });
    error = zodError.format();
  }
  form = body;
  error ??= parsed.error?.format();
}
---

<Layout title="新規会員登録">
  <form method="post" id="registerUser">
    <h1>新規会員登録</h1>

    <label for="lastName">姓</label>
    <input type="text" name="lastName" id="lastName" required />

    <label for="firstName">名</label>
    <input type="text" name="firstName" id="firstName" required />
    <br />

    <label for="email">メールアドレス</label>
    <input type="email" name="email" id="email" required />
    <br />

    <label for="zipcode">郵便番号</label>
    <input type="text" name="zipcode" id="zipcode" required /><br />

    <label for="prefecture">都道府県</label>
    <input type="text" name="prefecture" id="prefecture" required /><br />

    <label for="municipalities">市区町村</label>
    <input type="text" name="municipalities" id="municipalities" required /><br
    />

    <label for="address">住所</label>
    <input type="text" name="address" id="address" required /><br />

    <label for="telephone">電話番号</label>
    <input type="tel" name="telephone" id="telephone" required /><br />

    <label for="password">パスワード</label>
    <input type="password" name="password" id="password" required /><br />

    <label for="confirmPassword">確認用パスワード</label>
    <input
      type="password"
      name="confirmPassword"
      id="confirmPassword"
      required
    />
    <br />

    <button type="submit">登録</button>
  </form>
</Layout>
