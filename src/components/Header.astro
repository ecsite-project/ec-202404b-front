<header class="relative bg-white">
  <nav aria-label="Top" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="border-b border-gray-200">
      <div class="flex h-16 items-center justify-between">
        <!-- Logo -->
        <div class="ml-4 mt-6">
          <a href="/items">
            <img class="h-16" src="/images/logo.png" alt="shop_logo" />
          </a>
        </div>

        <div class="hidden sm:flex items-center space-x-6">
          <a href="#" class="group -m-2 flex items-center p-2">
            <span
              class="material-icons-outlined h-6 w-6 text-gray-400 group-hover:text-gray-500"
              >person</span
            >
          </a>
          <a
            href="/auth/login"
            class="text-sm font-medium text-gray-700 hover:text-gray-800"
            >ログイン</a
          >
          <span class="h-6 w-px bg-gray-200" aria-hidden="true"></span>
          <a
            href="/signup"
            class="text-sm font-medium text-gray-700 hover:text-gray-800"
            >新規登録</a
          >

          <!-- Cart -->
          <div class="ml-4 flow-root">
            <a href="#" class="group -m-2 flex items-center p-2">
              <span
                class="material-icons-outlined h-6 w-6 text-gray-400 group-hover:text-gray-500"
                >shopping_cart</span
              >
              <span
                class="ml-2 text-sm font-medium text-gray-700 group-hover:text-gray-800"
                >0</span
              >
              <span class="sr-only">items in cart, view bag</span>
            </a>
          </div>
        </div>

        <!-- Mobile menu toggle, controls the 'mobileMenuOpen' state. -->
        <button
          type="button"
          id="hamburgerButton"
          class="relative rounded-md bg-white p-2 text-gray-400 sm:hidden"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only">Open menu</span>
          <a href="#" class="group -m-2 flex items-center p-2">
            <span
              class="material-icons-outlined h-6 w-6 text-gray-400 group-hover:text-gray-500"
              >menu</span
            >
          </a>
        </button>
      </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state. -->
    <div class="sm:hidden hidden" id="mobile-menu">
      <div class="space-y-1 pt-2 pb-3">
        <a
          href="#"
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-50"
          >マイページ</a
        >
        <a
          href="/auth/login"
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-50"
          >ログイン</a
        >
        <a
          href="/signup"
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-50"
          >新規登録</a
        >
        <a
          href="#"
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-50"
          >カート</a
        >
      </div>
    </div>
  </nav>
</header>
<script>
  const menu = document.getElementById('mobile-menu');
  const hamburgerButton = document.getElementById('hamburgerButton');
  hamburgerButton?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
